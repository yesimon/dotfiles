termcapinfo xterm-color|xterm|xterms|xs|rxvt ti@:te@

# Don't display the copyright page
startup_message off

# Define a sane GNU screen command entry character
# first letter defines the screen command key.
# second letter defines the literal insert key.
escape ^za

defscrollback 5000

hardstatus             off
hardstatus             alwayslastline
#hardstatus string '%{= dd}%c %06=%-Lw%40L>%{+b}%n*%f%t%{-}%+Lw%<'
#hardstatus string "%{= dd} %-w%{+b dd} %n %t %{-}%+w %41=%H @ %l %-= %= %D,%c:%s "
hardstatus alwayslastline '%{= dd}%{= Wr} %D %d %M %c > %{= Ww}%-w%{= Wk}%n %t%{= Ww}%+w %{= dd} %='
